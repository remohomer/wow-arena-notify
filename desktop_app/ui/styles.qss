/* === GLOBAL === */
QWidget {
    background-color: #1e1e1e;
    color: #f0f0f0;
    font-family: "Segoe UI";
}

/* === BUTTONS === */
QPushButton {
    background-color: #2d2d2d;
    border: 1px solid #444;
    border-radius: 8px;
    padding: 8px 16px;
    font-size: 13px;
    color: #f0f0f0;
    min-width: 120px;
    font-weight: 600;
    transition: all 0.2s ease;
}
QPushButton:hover {
    background-color: #3a3a3a;
    border-color: #666;
}
QPushButton:pressed {
    background-color: #505050;
}

/* === MAIN BUTTON (Start/Stop) === */
QPushButton#mainButton {
    background-color: #4caf50;
    color: white;
    border: none;
    font-weight: bold;
    min-width: 140px;
}
QPushButton#mainButton:hover {
    background-color: #5ec75e;
}
QPushButton#mainButton:pressed {
    background-color: #3d8e41;
}

/* === SECONDARY BUTTON (How it works) === */
QPushButton#secondaryButton {
    background-color: #2e7dba;
    color: white;
    border: none;
}
QPushButton#secondaryButton:hover {
    background-color: #3b94dd;
}
QPushButton#secondaryButton:pressed {
    background-color: #256699;
}

/* === SPINBOX === */
QSpinBox {
    min-width: 100px;
    min-height: 28px;
}

/* === PROGRESS BAR === */
QProgressBar {
    border: 1px solid #555;
    border-radius: 6px;
    background-color: #2b2b2b;
    color: white;
    text-align: center;
    font-weight: bold;
    height: 22px;
}

/* ðŸŸ¢ Dynamic gradient for countdown:
   full â†’ green, middle â†’ yellow, end â†’ red  */
QProgressBar::chunk {
    border-radius: 6px;
    background-color: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:0,
        stop:0 #4cff4c,
        stop:0.5 #ffaa00,
        stop:1 #ff4444
    );
}

/* === STATUS LABEL === */
QLabel#status {
    font-size: 15px;
    font-weight: 600;
    padding: 6px;
    text-align: center;
}

/* === COLOR TAGS === */
@define-color status-green #4cff4c;
@define-color status-red #ff5555;
@define-color status-yellow #ffaa00;

/* === TABS === */
QTabWidget::pane {
    border: 1px solid #333;
    background: #1e1e1e;
    border-radius: 6px;
}

QTabBar::tab {
    background: #2b2b2b;
    color: #ddd;
    padding: 6px 14px;
    border: 1px solid #444;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
}

QTabBar::tab:selected {
    background: #3a3a3a;
    color: #4cff4c;
    border-bottom: 1px solid #3a3a3a;
}

/* === SPACERS / LAYOUT === */
QHBoxLayout, QVBoxLayout {
    spacing: 12px;
}

/* === MESSAGE BOXES === */
QMessageBox {
    background-color: #2b2b2b;
    color: #f0f0f0;
}
