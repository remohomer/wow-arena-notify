/* === PORTAL THEME — Matching Android App === */
/* Author: Remoh + ChatGPT | v1.2 */

/* --------------------------
   Global Colors (Dark mode)
--------------------------- */
@PortalOrange:      #F57C00;
@PortalAmber:       #FFA726;
@StoneDark:         #35302C;
@BackgroundDark:    #1B1816;
@SurfaceDark:       #2E2723;
@TextPrimaryDark:   #F3E4C9;
@TextSecondaryDark: #BFAE93;
@SuccessGreen:      #4CAF50;
@ErrorRed:          #F44336;

/* --------------------------
   Base
--------------------------- */
QWidget {
    background-color: @BackgroundDark;
    color: @TextPrimaryDark;
    font-family: "Segoe UI";
    font-size: 15px;
}

/* --------------------------
   Buttons (ALL default)
--------------------------- */
QPushButton {
    background-color: @SurfaceDark;
    border: 1px solid #000;
    border-radius: 10px;
    padding: 10px 18px;
    font-size: 15px;
    font-weight: 600;
    color: @TextPrimaryDark;
}
QPushButton:hover   { background-color: #3A322F; }
QPushButton:pressed { background-color: #4A423E; }

/* --------------------------
   Main action button
--------------------------- */
QPushButton#mainButton {
    background-color: @PortalOrange;
    color: white;
    border: none;
    font-weight: bold;
    padding: 10px 22px;
    border-radius: 12px;
}
QPushButton#mainButton:hover   { background-color: @PortalAmber; }
QPushButton#mainButton:pressed { background-color: #B35300; }

/* --------------------------
   Secondary Actions
--------------------------- */
QPushButton#secondaryButton {
    background-color: #5C534E;
    color: @TextPrimaryDark;
    border: 1px solid #000;
    border-radius: 10px;
    padding: 10px 20px;
}
QPushButton#secondaryButton:hover   { background-color: #70655F; }
QPushButton#secondaryButton:pressed { background-color: #4A423E; }

/* --------------------------
   Tabs styling
--------------------------- */
QTabWidget::pane {
    border: none;
    background: @BackgroundDark;
}

/* Enable custom drawing (disable Windows overrides) */
QTabBar {
    qproperty-drawBase: 0;
    background: transparent;
}

/* Base appearance */
QTabBar::tab {
    background: @SurfaceDark;
    color: @TextSecondaryDark;
    padding: 8px 20px;
    border-radius: 8px;
    border: 1px solid #000;
    margin: 0px 4px;
}

/* Active tab (selected/checked/focused) */
QTabBar::tab:selected,
QTabBar::tab:checked,
QTabBar::tab:focus:selected {
    background: @PortalOrange;
    color: white;
    font-weight: 700;
    border: 1px solid #000;
    box-shadow: 0px 0px 8px rgba(245,124,0,0.5);
}

/* Hover — only when NOT active */
QTabBar::tab:hover:!selected:!checked {
    background: #3A322F;
    color: @TextPrimaryDark;
}

/* --------------------------
   ProgressBar
--------------------------- */
QProgressBar {
    background-color: #2E2723;
    border-radius: 10px;
    height: 26px;
    text-align: center;
    font-weight: bold;
    color: white;
}

QProgressBar::chunk {
    border-radius: 10px;
    background-color: @PortalOrange;
}

/* --------------------------
   Status Labels
--------------------------- */
QLabel#status {
    font-size: 16px;
    font-weight: 600;
    padding: 6px;
}

/* --------------------------
   Inputs
--------------------------- */
QLineEdit, QComboBox {
    background-color: @StoneDark;
    color: @TextPrimaryDark;
    border: 1px solid #000;
    border-radius: 6px;
    padding: 6px;
}

/* --------------------------
   GroupBox
--------------------------- */
QGroupBox {
    background-color: @SurfaceDark;
    border: 1px solid #000;
    border-radius: 10px;
    padding: 14px;
    margin-top: 10px;
}
QGroupBox:title {
    color: @PortalAmber;
    padding: 4px;
    font-size: 14px;
}

/* --------------------------
   MessageBox
--------------------------- */
QMessageBox {
    background-color: @SurfaceDark;
    color: @TextPrimaryDark;
}
